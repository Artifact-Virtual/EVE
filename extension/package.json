{
  "name": "eve-vscode",
  "displayName": "EVE",
  "description": "EVE Go CLI integration (chat/plan/apply) + Webview.",
  "version": "0.0.1",
  "publisher": "artifactvirtual",
  "repository": "https://github.com/Artifact-Virtual/EVE",
  "homepage": "https://github.com/Artifact-Virtual/EVE",
  "icon": "media/icon.png",
  "engines": { "vscode": "^1.85.0" },
  "categories": ["Other"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      { "command": "eve.chat", "title": "EVE: Chat" },
      { "command": "eve.quickFix", "title": "EVE: Quick Fix" },
      { "command": "eve.explainCode", "title": "EVE: Explain Code" }
    ],
    "configuration": {
      "type": "object",
      "title": "EVE",
      "properties": {
        "eve.cliPath": { "type": "string", "default": "l:\\devops\\_sandbox\\EVE\\eve.exe", "description": "Path to EVE CLI binary" },
        "eve.args": { "type": "array", "items": { "type": "string" }, "default": [] }
      }
    },
    "keybindings": [
      { "command": "eve.chat", "key": "ctrl+alt+e", "mac": "cmd+alt+e", "when": "editorTextFocus" },
      { "command": "eve.quickFix", "key": "ctrl+alt+f", "mac": "cmd+alt+f", "when": "editorTextFocus" },
      { "command": "eve.explainCode", "key": "ctrl+alt+x", "mac": "cmd+alt+x", "when": "editorTextFocus" }
    ]
  },
  "scripts": {
    "vscode:prepublish": "tsc -p ./",
    "compile": "tsc -p ./",
    "watch": "tsc -w -p ./",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/node": "^18.19.0",
    "typescript": "^5.4.5",
    "@types/vscode": "^1.85.0",
    "@vscode/vsce": "^2.15.0"
  }
}
